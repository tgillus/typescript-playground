{
  "name": "functional-ts",
  "type": "module",
  "version": "0.0.0",
  "description": "Project for exploring functional libraries in TypeScript",
  "author": "Tramaine L. Gillus",
  "repository": {
    "type": "git",
    "url": "git@github.com:tgillus/functional-ts.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "bun run clean && bun test && tsc",
    "clean": "del-cli lib coverage",
    "format": "biome format --write --no-errors-on-unmatched .",
    "lint": "biome lint --no-errors-on-unmatched .",
    "lint:fix": "biome lint --apply --no-errors-on-unmatched .",
    "prepack": "bun run build",
    "prepare": "husky",
    "release": "release-it --ci",
    "test": "bun test",
    "test:cov": "bun test --coverage",
    "test:watch": "bun test --watch",
    "watch": "tsc -c"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@release-it/conventional-changelog": "9.0.3",
    "@types/bun": "1.1.13",
    "del-cli": "6.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.2.10",
    "release-it": "17.10.0",
    "testdouble": "3.20.2",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "@aws-lambda-powertools/metrics": "2.11.0",
    "htm": "3.1.1",
    "preact": "10.24.3",
    "preact-render-to-string": "6.5.11"
  }
}
